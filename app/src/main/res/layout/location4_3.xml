<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location4_3">

    <LinearLayout

        android:id="@+id/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="489dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/answer1"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/rex_bold"
            android:text="ДА!"
            android:textColor="@color/colorTextButton"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/answer2"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/rex_bold"
            android:text="Нет!"
            android:textColor="@color/colorTextButton"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="384dp"
        android:background="@drawable/text_background4"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="30dp"
        android:paddingTop="40dp"
        android:paddingEnd="30dp"
        android:text="О, ты фанат настолок? \n Хочешь пройти\n придуманный мною тест?"
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>