<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location5_3_1">

    <LinearLayout

        android:id="@+id/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="489dp"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/rex_bold"
            android:text="100 рублей"
            android:textColor="@color/colorTextButton"
            android:textSize="25sp"

            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/answer2"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/rex_bold"
            android:paddingStart="15dp"
            android:text="Коллегам? Бесплатно!"

            android:textColor="@color/colorTextButton"
            android:textSize="25sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <Button
            android:id="@+id/answer4"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/rex_bold"
            android:text="500 рублей"
            android:textColor="@color/colorTextButton"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:layout_marginTop="112dp"
        android:background="@drawable/text_background2"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:text="Но какая цена будет разумной..."
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="341dp"
        android:layout_height="57dp"

        android:layout_marginTop="364dp"
        android:background="@drawable/text_background5"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="40dp"
        android:paddingTop="20dp"
        android:paddingEnd="15dp"
        android:text="Как насчет мнения со стороны?"
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>