<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location5_3_3"
    >

    <Button
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="35dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:text="А ты шаришь за бизенис идеи!"
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/text_background6"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="20dp"
        android:paddingTop="25dp"
        android:paddingEnd="25dp"
        android:text="Приходи еще, мы тут \n обычно по вторникам!"
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>