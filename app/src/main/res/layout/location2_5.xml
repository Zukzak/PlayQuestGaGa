<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location2_3">

    <LinearLayout
        android:id="@+id/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="489dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/one"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_pressed"
                    android:fontFamily="@font/rex_bold"
                    android:text="Это был я!"
                    android:textColor="@color/colorTextButton"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_pressed"
                    android:fontFamily="@font/rex_bold"
                    android:text="Это были вы!"
                    android:textColor="@color/colorTextButton"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingStart="15dp"
                    android:background="@drawable/button_pressed"
                    android:fontFamily="@font/rex_bold"
                    android:text="Девушка\n игромастер!"
                    android:textColor="@color/colorTextButton"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <Button
                    android:id="@+id/four"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/button_pressed"
                    android:fontFamily="@font/rex_bold"
                    android:text="Парень\n игромастер!"
                    android:textColor="@color/colorTextButton"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
                <Button
                    android:id="@+id/five"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/button_pressed"
                    android:fontFamily="@font/rex_bold"
                    android:text="Парень\n из гостинной!"
                    android:textColor="@color/colorTextButton"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_pressed"
                    android:fontFamily="@font/rex_bold"
                    android:text="Девушка\n из зала!"
                    android:textColor="@color/colorTextButton"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/seven"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:background="@drawable/button_pressed"
                    android:fontFamily="@font/rex_bold"
                    android:text="Парни\n из классной!"
                    android:textColor="@color/colorTextButton"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/back"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_pressed"
            android:fontFamily="@font/rex_bold"
            android:text="Назад"
            android:textColor="@color/colorTextButton"
            android:textSize="25sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:background="@drawable/text_background3"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="40dp"
        android:text=""
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>