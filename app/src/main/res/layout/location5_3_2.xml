<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location5_3_2"
    >

    <Button
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="185dp"
        android:layout_height="57dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:text="Звучит разумно..."
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="408dp"
        android:background="@drawable/text_background6"
        android:fontFamily="@font/rex_bold"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:paddingEnd="30dp"
        android:text="Не хотите камео в проекте?"
        android:textColor="@color/colorNameApp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>